{
  "manifest_version": 3,
  "name": "zen-youtube",
  "version": "1.0",
  "description": "Blocks everything on YouTube except the video player",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch*"
      ],
      "css": [
        "./styles/content.styles.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
